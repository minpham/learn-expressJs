extends ../layout/common

block content
	.container.text-center
		.row
			.col-xs-6.col-md-6.col-sm-6.col-lg-6
				h2 Create User
				if errors
					each error in errors
						.alert.alert-warning= error
				form(action="/users/create", method="POST" enctype="multipart/form-data")
					.form-group
						label(for="name") Name
						input#name.form-control(type="text", name="name" value=values ? values.name : "")
					.form-group
						label(for="phone") Phone
						input#phone.form-control(type="text", name="phone" value=values ? values.phone : "")
					.form-group
						label(for="avatar") Avatar
						input#avatar.form-control-file(type="file", name="avatar")
					.form-group
						button.btn.btn-dark Create