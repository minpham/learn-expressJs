extends ../layout/common

block content
	.container
		nav.navbar.navbar-expand-lg.navbar-light.bg-light
			#navbarNavAltMarkup.collapse.navbar-collapse
				.navbar-nav
					a.nav-item.nav-link.active(href='/')
						| Home 
						span.sr-only (current)
					a.nav-item.nav-link(href='/users') User
					a.nav-item.nav-link(href='/products') Products
					a.nav-item.nav-link(href='#') Disabled
			a.nav-item.nav-link(href="#")= user.name
		.row
			.col-xs-6.col-sm-6.col-md-6.col-lg-6
				.text-center
					h2 List User
					a(href="/users/create" class="btn btn-primary mb-2") New User
					form(action='/users/search', method='GET')
						.form-group
							input(type="text", name="q", class="form-control" value=q)
						.form-group
							button.btn.btn-warning Tìm kiếm
					table.table.table-bordered
						thead
							tr
								th Name
								th Phone
								th View
						tbody
							each user in users
								tr
									th= user.name
									th= user.phone
									th
										a.btn.btn-warning(href=`/users/${user.id}`) Info