extends ../layout/common

block content
	.container
		nav.navbar.navbar-expand-lg.navbar-light.bg-light
			#navbarNavAltMarkup.collapse.navbar-collapse
				.navbar-nav
					a.nav-item.nav-link.active(href='/')
						| Home 
						span.sr-only (current)
					a.nav-item.nav-link(href='/users') User
					a.nav-item.nav-link(href='/products') Products
					a.nav-item.nav-link(href='#') Disabled
		.row
			.col-xs-6.col-sm-6.col-md-6.col-lg-6
				.text-center
					h2 Login
					if errors
						each error in errors
							.alert.alert-danger= error
					form(method='POST')
						input(type="hidden", name="_csrf", value=csrfToken)
						.form-group
							label(for="email") Email: 
							input#email(type="text", name="email", class="form-control" value=values? values.email : "")
						.form-group
							label(for="password") Password: 
							input#password(type="password", name="password", class="form-control"  value=values? values.password : "")
						.form-group
							button.btn.btn-warning Submit