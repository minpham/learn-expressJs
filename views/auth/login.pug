extends ../layout/common

block content
	.container
		.row
			.col-xs-6.col-sm-6.col-md-6.col-lg-6
				.text-center
					h2 Login
					if errors
						each error in errors
							.alert.alert-danger= error
					form(method='POST')
						.form-group
							label(for="email") Email: 
							input#email(type="text", name="email", class="form-control" value=values? values.email : "")
						.form-group
							label(for="password") Password: 
							input#password(type="password", name="password", class="form-control"  value=values? values.password : "")
						.form-group
							button.btn.btn-warning Submit